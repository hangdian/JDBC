<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.hg.dao.UserMapper">
    <select id="getUserList" resultType="com.hg.pojo.User">
    select * from mybatis.user
  </select>
    <select id="getUserById" parameterType="int" resultType="com.hg.pojo.User">
        select * from USER where id=#{id};
    </select>
    <insert id="addUser" parameterType="com.hg.pojo.User" >
        insert into user(id,name,pwd)values (#{uid},#{name}  ,#{pwd});
    </insert>
    <update id="updateUser" parameterType="com.hg.pojo.User" >
        update user set name=#{name },pwd=#{pwd}  where id=#{id} ;
    </update>
    <delete id="deleteUser" parameterType="int" >
        delete from  user where id=#{id}
    </delete>
</mapper>